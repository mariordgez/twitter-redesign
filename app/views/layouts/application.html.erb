<!DOCTYPE html>
<html>
  <head>
    <title>TwitterRedesign</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/cf2fdf395d.js" crossorigin="anonymous"></script>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>
  <% if flash[:notice] %>
  		<div class="notification is-primary global-notification">
  			<p class="notice"><%= notice %></p>
  		</div>
  	<% end %>
    
  	<% if flash[:alert] %>
  		<div class="notification is-danger global-notification">
  			<p class="alert"><%= alert %></p>
  		</div>
  	<% end %>
   <nav class="navbar is-info">
  		<div class="navbar-brand">
  		<%= link_to root_path, class: "navbar-item" do %>
				<span class="icon"><i class="fab fa-twitter" aria-hidden="true"></i></span>
  		<% end %>
			<div class="navbar-burger burger" data-target="navbarExample">
					<span></span>
					<span></span>
					<span></span>
  		</div>
  	 </div>

			<div id="navbarExample" class="navbar-menu">
				<div class="navbar-end">
          <div class="navbar-item">
					<div class="field is-grouped">
						<p class="control">
            	<%= link_to new_tweet_path, class: "button is-info" do %>
  					  <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
  					<% end %>
						</p>
            <% if user_signed_in? %>
              <p class="control">
              <%= link_to edit_user_registration_path, class: "button is-info" do %>
  					  <span class="icon"><i class="fas fa-cog" aria-hidden="true"></i></span>
  					<% end %>
							</p>
              <p>
              <%= link_to destroy_user_session_path, method: :delete, class: "button is-info" do %>
  					  <span class="icon"><i class="fas fa-sign-out-alt" aria-hidden="true"></i></span>
  					<% end %>
							</p>
            <% else %>
            <p class="control">
              <%= link_to new_user_session_path, class: "button is-info" do %>
  					  <span class="icon"><i class="fas fa-sign-in-alt" aria-hidden="true"></i></span>
  					<% end %>            </p>
						<p class="control">
              <%= link_to new_user_registration_path, class: "button is-info" do %>
  					  <span class="icon"><i class="fas fa-user-plus" aria-hidden="true"></i></span>
  					<% end %>            </p>
            <% end %>
            </div>
					</div>
				</div>
			</div>
  	</nav>
    <%= yield %>
  </body>
</html>